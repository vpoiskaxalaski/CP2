<Window x:Class="Notest.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        xmlns:local="clr-namespace:Notest"
        mc:Ignorable="d"
        Title="Notest" Height="500" Width="800" Icon ="../ico/main.ico">
    <Window.Background>
        <ImageBrush ImageSource="..\picture\1.jpg" />
    </Window.Background>
    <Window.Resources>
        <Style x:Key="ds" TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="OpenDoor">
            <Style.Triggers>
                <EventTrigger>

                </EventTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Viewbox Stretch="Fill">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="490"/>
            </Grid.RowDefinitions>
            <Grid  Grid.Row="0" Background="#373940" >
                <Image Source="../ico/book.ico"  
                           Width="65" Height="55"
                           HorizontalAlignment="Left"/>
                <TextBlock x:Name="UserLogin"
                           HorizontalAlignment="Left"
                           Margin="75 15 15 15"
                           Foreground="#e3e0de"
                           Width="140"
                           FontSize="20">
                </TextBlock>
                <Button Width="80" Height="60"
                        Background="{x:Null}"
                        BorderBrush="{x:Null}"
                        ToolTip="Выход"
                        HorizontalAlignment="Right"
                        Margin="5"
                        Click="GoOut">
                    <Image Source="../ico/door.ico"
                           Width="75" Height="55"
                           VerticalAlignment="Center"
                           MouseEnter="OnMouseOver"
                           MouseLeave="OnMouseLeave"/>
                </Button>
            </Grid>

            <StackPanel Grid.Row="1" Height="350" Orientation="Vertical" Margin="287,10,233,120" >
                <Viewbox>
                    <TabControl Width="326" Height="274" Background="{x:Null}">
                        <TabItem Header="Поиск по теме"
                                 Background="{x:Null}"
                                 GotFocus="OnSearchTypeSelected"
                                 Height="25" Width="100"                                 
                                 VerticalAlignment="Bottom">
                            <StackPanel>
                                <StackPanel Name="SearchByTheme" Height="200">
                                    <TextBox x:Name="ByTopic"
                                             TextChanged="OnSearchBeginByTheme"
                                             Margin="0,20,0,0"
                                             materialDesign:HintAssist.Hint="Topic"/>
                                    <Label Content="Select a topic:"/>
                                    <ComboBox x:Name="SelectedTopics"
                                              IsEnabled="False"
                                              SelectionChanged="OnTopicSelected"/>
                                    <Label Content="Select a header:"/>
                                    <ComboBox x:Name="SelectedHeaders"
                                              IsEnabled="False"
                                              SelectionChanged="OnHeaderSelected"/>
                                </StackPanel>
                                <StackPanel Name="SearchByName"
                                            Height="200"
                                            Visibility="Collapsed">
                                    <Label Margin="0,10.8,0.4,11.6">Тема</Label>
                                    <ComboBox x:Name="SelectHeaders" Height="30" IsEnabled="False" SelectionChanged="OnHeaderSelected" Margin="0,41.4,0.4,9.8"/>
                                </StackPanel>
                            </StackPanel>
                        </TabItem>
                        <TabItem Header="По названию"
                                 Background="{x:Null}"
                                 Width="100" Height="25"
                                 VerticalContentAlignment="Center"
                                 GotFocus="OnSearchTypeSelected">
                            <StackPanel Margin="10,0,10,0" VerticalAlignment="Center">
                                <TextBox  Name="ByHeader" 
                                          materialDesign:HintAssist.Hint="Header"
                                          Margin="10,0,10,10"
                                          TextChanged="OnSearchBeginByHeader"/>
                                <ComboBox x:Name="Headers"
                                          SelectionChanged="OnHeaderSelected"
                                          Margin="10,0,10,10" IsEnabled="False"/>
                            </StackPanel>
                        </TabItem>
                    </TabControl>
                </Viewbox>
                <Viewbox Height="127">
                    <StackPanel Height="129" Name="Tools" Margin="0,0,-0.4,0" Width="331">
                        <StackPanel Orientation="Horizontal" Name="Info">
                            <Label Content="Author" />
                            <Label x:Name="Author"
                                   Width="80"/>
                            <Label Content="Topic"/>
                            <Label x:Name="Topic"
                                   Width="80"/>
                            <Label Content="Header" />
                            <Label x:Name="Header"
                                   Width="80"/>
                        </StackPanel>
                        <Button Content="Select a test"
                                Margin="42.6,18.4,42.6,26.8"
                                Click="OnChooseTest"/>
                        <Label x:Name="Status" 
                               Width="350" Height="30"
                               HorizontalContentAlignment="Center" />
                    </StackPanel>
                </Viewbox>
            </StackPanel>
        </Grid>
    </Viewbox>
</Window>
