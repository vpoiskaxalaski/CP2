<Window x:Class="Notest.FindTest_Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Notest"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d"
        Height="500" Width="400"   Icon="..\ico\main.ico"
        WindowStyle="None" AllowsTransparency="True">
    <Window.Background>
        <ImageBrush ImageSource="..\picture\6.jpg"/>
    </Window.Background>
    <Grid>
        <Grid Height="30" VerticalAlignment="Top" Background="#7a6e6c">
            <Menu Name="Languages" 
                      Background="{x:Null}"                        
                      HorizontalContentAlignment="Left">
                <MenuItem Name="Русский" Click="OnLanguageChange" HorizontalContentAlignment="Center"/>
                <MenuItem Name="English" Click="OnLanguageChange" HorizontalContentAlignment="Center"/>
            </Menu>
            <Button Width="43" Height="Auto"
                        HorizontalAlignment="Right"
                        Background="{x:Null}"
                        BorderBrush="{x:Null}" 
                        Click="CloseWindow_Click">
                <materialDesign:PackIcon Kind="WindowClose"
                                             Width="27" Height="21"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             />
            </Button>
        </Grid>
        <Rectangle
            Fill="#c3beba"
            Width="300" Height="350"
            VerticalAlignment="Center"              
            Margin="15"
            Opacity="0.7"/>
        <ScrollViewer 
                  VerticalAlignment="Center"                   
                  Height="350" Width="300">
            <ListView Name="AllTests"
                      SelectionMode="Single"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"                   
                  Height="350" Width="285">
                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding Topic}"
                                     Header="{DynamicResource topic}" />
                        <GridViewColumn DisplayMemberBinding="{Binding Header}"
                                    Header="{DynamicResource header}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </ScrollViewer>
        <Button Name="FindTestButton"
                Width="90" Height="35"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
                Margin="25"
                Background="#7a6e6c"
                Foreground="#e3e0de"
                Content="{DynamicResource select}"
                FontSize="10"                
                Click="FindTestButton_Click"/>
    </Grid>
</Window>
